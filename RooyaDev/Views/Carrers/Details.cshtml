@model RooyaDev.Models.Carrer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <!-- Right Panel -->

<div id="right-panel" class="right-panel">

    <!-- Header-->
    <header id="header" class="header">
        <div class="header-menu">
            <div class="col-sm-7">
                <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                <div class="center">
                    <i class="fa fa-laptop"> </i> <label> Details carrers</label>
                </div>
                <div class="header-left">
                </div>
            </div>
        </div>
    </header><!-- /header -->
    <!-- Header-->
    <div class="col-md-12">
        <h3 class="white"><i class="fa fa-laptop"></i>Carrer Details</h3> <hr />
        <table class="table table-bordered table-hover white">

            <tr class="alert">
                <td class="col-md-6">Name</td>
                <td class="col-md-6">@Model.Name</td>
            </tr>
            <tr class="alert">
                <td class="col-md-6">Salary</td>
                <td class="col-md-6">@Model.Salary</td>
            </tr>
            <tr class="alert">
                <td class="col-md-6">Skills</td>
                <td class="col-md-6">
                    <ol class="list-group list-group-item list-group-item-info">
                        @foreach (var item in Model.Skills)
                        {
                            <li>@item.Name</li>
                        }
                    </ol>
                </td>
            </tr>
            <tr class="alert">
                <td class="col-md-6">Requirment</td>
                <td class="col-md-6">
                    <ol class="list-group list-group-item list-group-item-info">
                        @foreach (var item in Model.Requirments)
                        {
                            <li>@item.Name</li>
                        }
                    </ol>
                </td>
            </tr>
            <tr class="alert">
                <td class="col-md-6">Type</td>
                <td class="col-md-6">@Model.Type</td>
            </tr>
            <tr class="alert">
                <td class="col-md-6">Country</td>
                <td class="col-md-6">@Model.Country</td>

            </tr>
            <tr class="alert">
                <td class="col-md-6">Description</td>
                <td class="col-md-6">@Model.Description</td>
            </tr>
        </table>
        <a href="~/Carrers/Edit/@Model.ID;" class="btn btn-info">edit</a>

    </div>
    <h2>Applications</h2>
    <div id="DI">
        <table class="table table-info table-hover table-bordered">
            <tr>
                <td>Name</td>
                <td>Email</td>
                <td>Phone</td>
                <td></td>
            </tr>
            @foreach (var item in Model.Applications)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>
                        @using (Html.BeginForm("DownloadCV","Carrers",new { id=item.ID,name=item.Name},FormMethod.Post,null))
                        {
                            <button type="submit" class="btn btn-default">Download</button>
                        }
                    </td>
                </tr>
            }

        </table>
    </div>

</div>
