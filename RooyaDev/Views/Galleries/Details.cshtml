@model RooyaDev.Models.Gallery

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <!-- Right Panel -->

<div id="right-panel" class="right-panel">

    <!-- Header-->
    <header id="header" class="header">
        <div class="header-menu">
            <div class="col-sm-7">
                <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                <div class="center">
                    <i class="fa fa-laptop"> </i> <label> Protofolio Details</label>
                </div>
                <div class="header-left">
                </div>
            </div>
        </div>
    </header><!-- /header -->
    <!-- Header-->
    <div class="col-md-12">
        <h3 class="white"><i class="fa fa-laptop"></i> Protofolio Details</h3> <hr />
        <table class="table table-bordered table-hover white">

            <tr class="alert">
                <td class="col-md-2">Name</td>
                <td class="col-md-10">@Model.Name</td>
            </tr>
            <tr class="alert">
                <td class="col-md-2">Name AR</td>
                <td class="col-md-10">@Model.Name_AR</td>
            </tr>
            <tr class="alert">
                <td class="col-md-2">Description</td>
                <td class="col-md-10">@Model.Description</td>
            </tr>
            <tr class="alert">
                <td class="col-md-2">Description AR</td>
                <td class="col-md-10">@Model.Description_AR</td>
            </tr>
            <tr class="alert">
                <td class="col-md-2">Photo</td>
                <td class="col-md-10"><img src="~/Uploads/Gallery/@(Model.ID).jpg"  width="100" height="100" style="border-radius:50%" /></td>
            </tr>
        </table>
        <a href="~/Galleries/Edit/@Model.ID" class="btn btn-info">edit</a>

    </div>
</div>