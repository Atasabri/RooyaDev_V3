@model RooyaDev.Models.Admin

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="right-panel" class="right-panel">

    <!-- Header-->
    <header id="header" class="header">
        <div class="header-menu">
            <div class="col-sm-7">
                <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                <div class="center">
                    <i class="fa fa-laptop"> </i> <label> Admin Details</label>
                </div>
                <div class="header-left">
                </div>
            </div>
        </div>
    </header><!-- /header -->
    <!-- Header-->
    <div class="col-md-12">
        <h3 class="white"><i class="fa fa-laptop"></i> Details Admin</h3> <hr />
        <table class="table table-bordered table-hover white">
            <tr class="alert">
                <td class="col-md-2">Name</td>
                <td class="col-md-10">@Model.Name</td>
            </tr>
            <tr class="alert">
                <td class="col-md-2">User name</td>
                <td class="col-md-10">@Model.User_Name</td>
            </tr>
            <tr class="alert">
                <td class="col-md-2">Password</td>
                <td class="col-md-10">@Model.Password</td>
            </tr>
            <tr class="alert">
                <td class="col-md-2">Type</td>
                @if (Model.Type == 1)
                {
                    <td class="col-md-6">Manager</td>
                }
                else
                {
                    <td class="col-md-10">Normal</td>
                }
            </tr>
            <tr class="alert">
                <td class="col-md-2">Photo</td>
                <td class="col-md-10">
                    <img src="~/Uploads/Admins/@(Model.ID).jpg" width="100" height="100" style="border-radius:50%" />
                </td>
            </tr>
        </table>
        <a href="~/Admins/Edit/@Model.ID" class="btn btn-info">Edit</a>

    </div>
</div>
